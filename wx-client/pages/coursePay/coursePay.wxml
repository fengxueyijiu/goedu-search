<!--pages/coursePay/coursePay.wxml-->
<view class="container">
  <view class="header">
    <image src="http://o86bpj665.bkt.clouddn.com/posters/gitbeijing.png" mode="aspectFill"  style="width: 200rpx;height:200rpx;border-radius:10rpx"/>
    <view class="header-right">
      <view style="color:#e64340">¥79.00</view>
      <view>中国舞1班</view>
      <view style="color:#888888">数量1</view>
    </view>
  </view>
  <form bindsubmit="bindFormSubmit">
    <radio-group>
      <viem class="label">
        <text>银联支付</text>
        <radio name="name" type="text" />
      </viem>
      <viem class="label">
        <text>易极付</text>
        <radio name="number" type="number" />
      </viem>
      <viem class="label">
        <text>微信支付</text>
        <radio name="number" type="number" />
      </viem>
    </radio-group>
    <button type="warn" form-type="submit" > 立即支付 ¥3800.00</button>
  </form>
</view>
