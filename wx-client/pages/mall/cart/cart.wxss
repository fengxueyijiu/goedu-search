/* pages/mall/cart/cart.wxss */

page{
  background-color: #f7f7f7;
}

.shopName {
  padding: 16rpx 32rpx;
  font-size: 32rpx;
  background-color: #fff;
  margin-top: 16rpx;
  display: flex;
  align-items: center;
}

.shopName icon {
  margin-right: 16rpx;
}

.cart {
  display: flex;
  padding: 32rpx;
  background-color: #fff;
  border-top: 2rpx solid #f1f1f1;
}
.cart image {
  width: 200rpx;
  height: 200rpx;
  margin-left: 16rpx;
}

.cart icon {
  align-self: center;
}

.cart .box {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 16rpx;
}

.cart .box .title {
  display: flex;

}

.title .goodsName {
  font-size: 32rpx;
  width: 380rpx;
  overflow: hidden; /*自动隐藏文字*/
  text-overflow: ellipsis;/*文字隐藏后添加省略号*/
  white-space: nowrap;
}

.cart .box .num {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cart .box .num view {
  display: flex;
}

.cart .box .num view text {
  display: block;
  border: 2rpx solid #f1f1f1;
  padding: 8rpx 12rpx;
  text-align: center;
}
.cart .box .num view .shuzi {
  margin: 0 16rpx ;
  padding: 8rpx 24rpx;
}

.empty {
  display: flex;
  align-items: center;
  height: 30vh;
}

.empty view{
  margin: 0 auto;
}

.goods {
  margin-top: 16rpx;
  margin-bottom: 108rpx;
}

.goods .label {
  padding: 16rpx 32rpx;
  background-color: #fff;
  color: #888888;
  border-left: 3px solid #ff8a00;
}

.courses {
  padding: 0 16rpx;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
}

.course {
  display: flex;
  flex-direction: column;
  border: 2rpx solid #ddd;
  margin: 16rpx 0;
  box-sizing: border-box;
  background-color: #fff;
}

.title {
  display: block;
  color: #212121;
  font-size: 12px;
  width: 100%;
  padding: 16rpx;
  box-sizing: border-box;
  overflow: hidden; /*自动隐藏文字*/
  text-overflow: ellipsis;/*文字隐藏后添加省略号*/
  white-space: nowrap;
}

.footer {
  position: fixed;
  bottom:0;
  width: 100%;
  display: flex;
  height: 108rpx;
  background-color: #fff;
  border-top: 2rpx solid #f1f1f1;
}
.like {
  width: 60%;
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
  padding-right: 32rpx;
}


/*.like navigator {
  display: block;
  padding: 0 16rpx;
}*/


.button {
  display: flex;
  width: 40%;
}

.button button {
  margin: 0;
  padding: 0;
  width: 100%;
  line-height: 108rpx;
  border-radius: 0;
  outline: none;
}

.button button::after{
  width: auto;
  height: auto;
}
